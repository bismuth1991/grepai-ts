{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error"
  },
  "rules": {
    "sort-imports": "error",
    "import/consistent-type-specifier-style": "error",
    "typescript/consistent-type-imports": "error"
  },
  "plugins": ["import"],
  "ignorePatterns": ["node_modules", ".turbo", ".cache"]
}
