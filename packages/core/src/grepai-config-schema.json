{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["embedding", "storage"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "embedding": {
      "anyOf": [
        {
          "type": "object",
          "required": ["provider", "model", "apiKey"],
          "properties": {
            "targetChunkSize": {
              "type": "number",
              "description": "Preferred token count per chunk; adjacent chunks below this are merged"
            },
            "maxChunkSize": {
              "type": "number",
              "description": "Hard upper limit in tokens; AST nodes exceeding this are split recursively"
            },
            "provider": {
              "type": "string",
              "enum": ["google"]
            },
            "model": {
              "type": "string",
              "enum": ["gemini-embedding-001"]
            },
            "apiKey": {
              "type": "string"
            },
            "dimensions": {
              "type": "number",
              "enum": [768, 1536, 3072],
              "description": "Dimensionality of the embedding vectors (default 3072, capped to 1536 for Postgres)"
            },
            "tokenizer": {
              "type": "string",
              "enum": ["simple", "gemini-embedding-001"]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["provider", "model", "apiKey"],
          "properties": {
            "targetChunkSize": {
              "type": "number",
              "description": "Preferred token count per chunk; adjacent chunks below this are merged"
            },
            "maxChunkSize": {
              "type": "number",
              "description": "Hard upper limit in tokens; AST nodes exceeding this are split recursively"
            },
            "provider": {
              "type": "string",
              "enum": ["openai"]
            },
            "model": {
              "type": "string",
              "enum": ["text-embedding-3-small"]
            },
            "apiKey": {
              "type": "string"
            },
            "dimensions": {
              "type": "integer",
              "description": "Dimensionality of the embedding vectors (max 1536)",
              "title": "between(1, 1536)",
              "minimum": 1,
              "maximum": 1536
            },
            "tokenizer": {
              "type": "string",
              "enum": ["simple", "tiktoken"]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["provider", "model", "apiKey"],
          "properties": {
            "targetChunkSize": {
              "type": "number",
              "description": "Preferred token count per chunk; adjacent chunks below this are merged"
            },
            "maxChunkSize": {
              "type": "number",
              "description": "Hard upper limit in tokens; AST nodes exceeding this are split recursively"
            },
            "provider": {
              "type": "string",
              "enum": ["openai"]
            },
            "model": {
              "type": "string",
              "enum": ["text-embedding-3-large"]
            },
            "apiKey": {
              "type": "string"
            },
            "dimensions": {
              "type": "integer",
              "description": "Dimensionality of the embedding vectors (max 3072)",
              "title": "between(1, 3072)",
              "minimum": 1,
              "maximum": 3072
            },
            "tokenizer": {
              "type": "string",
              "enum": ["simple", "tiktoken"]
            }
          },
          "additionalProperties": false
        }
      ],
      "description": "Embedding model and provider configuration"
    },
    "include": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Glob patterns of files to index"
    },
    "exclude": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Glob patterns of files to exclude"
    },
    "storage": {
      "anyOf": [
        {
          "type": "object",
          "required": ["type", "authToken", "url"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["turso"],
              "description": "Turso database storage backend"
            },
            "authToken": {
              "type": "string",
              "description": "Authentication token for the Turso database"
            },
            "url": {
              "type": "string",
              "description": "Connection URL of the Turso database"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "connectionString"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["postgres"],
              "description": "PostgreSQL database storage backend"
            },
            "connectionString": {
              "type": "string",
              "description": "PostgreSQL connection string (e.g. postgres://user:pass@host:port/db)"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["lancedb"],
              "description": "Local LanceDB storage backend"
            }
          },
          "additionalProperties": false
        }
      ],
      "description": "Database backend for storing chunks and embeddings"
    }
  },
  "additionalProperties": false
}
