{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["embedding", "storage"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "embedding": {
      "type": "object",
      "required": ["provider", "model", "apiKey", "dimensions"],
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["google"]
        },
        "model": {
          "type": "string",
          "enum": ["gemini-embedding-001"]
        },
        "apiKey": {
          "type": "string"
        },
        "dimensions": {
          "type": "number",
          "enum": [768, 1536, 3072]
        },
        "targetChunkSize": {
          "type": "number"
        },
        "maxChunkSize": {
          "type": "number"
        },
        "embeddingBatchSize": {
          "type": "number"
        },
        "tokenizer": {
          "type": "string",
          "enum": ["simple", "gemini-embedding-001"]
        }
      },
      "additionalProperties": false
    },
    "include": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "exclude": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "storage": {
      "anyOf": [
        {
          "type": "object",
          "required": ["type", "authToken", "url"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["turso"]
            },
            "authToken": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "connectionString"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["postgres"]
            },
            "connectionString": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false
}
