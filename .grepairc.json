{
  "$schema": "packages/core/src/grepai-config-schema.json",
  "storage": {
    "type": "turso",
    "url": "${TURSO_DB_URL}",
    "authToken": "${TURSO_DB_AUTH_TOKEN}"
  },
  "embedding": {
    "provider": "google",
    "model": "gemini-embedding-001",
    "apiKey": "${GEMINI_API_KEY}",
    "dimensions": 3072,
    "maxChunkSize": 1024,
    "targetChunkSize": 512
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", ".opencode", ".turbo", ".cache", ".zed"]
}
